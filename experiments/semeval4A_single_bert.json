{
	"dataset_reader": {
		"type": "semeval4_a_reader",
		"token_indexers": {
			"bert": {
				"type": "pretrained_transformer",
				"model_name": "bert-base-cased",
				"do_lowercase": true
			}
		}
	},
	"train_data_path": "datasets/k_fold_validation/A/task_A10_train.csv",
	"test_data_path": "datasets/k_fold_validation/A/task_A10_test.csv",
	"evaluate_on_test": true,
	"model": {
		"type": "a_classifier_2",
		"text_field_embedder": {
			"token_embedders": {
				"bert": {
					"type": "bert-pretrained",
					"pretrained_model": "bert-base-cased",
					"top_layer_only": true,
					"requires_grad": false
				}
			}
		},
		"positional_encoding": {
			"input_dim": 768
		},
		"sent0_encoder": {
			"type": "lstm",
			"bidirectional": true,
			"input_size": 768,
			"hidden_size": 100,
			"num_layers": 2,
			"dropout": 0.3
		},
		"sent1_encoder": {
			"type": "lstm",
			"bidirectional": true,
			"input_size": 768,
			"hidden_size": 100,
			"num_layers": 2,
			"dropout": 0.3
		},
		"classifier_feedforward": {
			"input_dim": 200,
			"num_layers": 2,
			"hidden_dims": [200, 2],
			"activations": ["relu", "linear"],
			"dropout": [0.3, 0.0]
		}
	},
	"iterator": {
		"type": "bucket",
		"sorting_keys": [
			["sent0", "num_tokens"],
			["sent1", "num_tokens"]
		],
		"batch_size": 64
	},
	"trainer": {
		"num_epochs": 50,
		"patience": 20,
		"cuda_device": -1,
		"grad_clipping": 5.0,
		"validation_metric": "+accuracy",
		"optimizer": {
			"type": "adagrad"
		}
	},
	"validation_data_path": "datasets/DevData/subtaskA_dev.csv"
}